{
  "name": "fitglue-web",
  "version": "1.0.0",
  "description": "FitGlue web frontend and Firebase Hosting configuration",
  "scripts": {
    "dev": "vite",
    "build": "vite build && npm run postbuild",
    "postbuild": "sh -c 'if [ -d dist/app ]; then mv dist/app dist/app-temp && mkdir -p dist/app && mv dist/app-temp/index.html dist/app/ && rmdir dist/app-temp; fi'",
    "preview": "vite preview",
    "serve": "npx http-server public -p 5000 -o",
    "local-prod": "npm run build && npx firebase serve --only hosting",
    "serve:firebase": "firebase serve",
    "deploy": "firebase deploy --only hosting",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "gen-api": "npx openapi-typescript src/openapi/swagger.json -o src/shared/api/schema.ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ripixel/fitglue-web.git"
  },
  "author": "James King",
  "license": "MIT",
  "devDependencies": {
    "@types/react": "^19.0.7",
    "@types/react-dom": "^19.0.3",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.3.4",
    "esbuild": "^0.27.2",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "firebase-tools": "^13.24.1",
    "htmlhint": "^1.1.4",
    "openapi-fetch": "^0.15.0",
    "openapi-typescript": "^7.10.1",
    "stylelint": "^16.12.0",
    "stylelint-config-standard": "^36.0.1",
    "typescript": "^5.3.3",
    "vite": "^6.0.7"
  },
  "dependencies": {
    "firebase": "^10.0.0",
    "jotai": "^2.16.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-router-dom": "^6.30.2"
  }
}
