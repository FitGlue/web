{
  "name": "fitglue-web",
  "version": "10.30.1",
  "description": "FitGlue web frontend and Firebase Hosting configuration",
  "type": "module",
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "dev": "npm run serve",
    "dev:static": "npx skier watch",
    "build": "npm run _build:app && npm run _flatten && BUILD_ENV=prod npm run _build:static",
    "build:dev": "vite build --mode development && npm run _flatten && BUILD_ENV=dev npm run _build:static",
    "build:test": "vite build --mode test && npm run _flatten && BUILD_ENV=test npm run _build:static",
    "build:prod": "npm run build",
    "serve": "npm run build:dev && npx firebase serve --only hosting",
    "preview": "vite preview",
    "_build:static": "npx skier build",
    "_build:app": "tsc --noEmit && vite build",
    "_flatten": "sh -c 'if [ -d dist/public ]; then cp -r dist/public/* dist/ && rm -rf dist/public; fi'",
    "deploy": "firebase deploy --only hosting",
    "deploy:prod": "firebase deploy --only hosting -P prod",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "gen-api": "npx openapi-typescript src/openapi/swagger.json -o src/shared/api/schema.ts",
    "release": "standard-version --releaseCommitMessageFormat \"chore(release): {{currentTag}} [skip ci]\"",
    "generate-changelog": "npx tsx scripts/generate-public-changelog.ts",
    "generate-changelog:ai": "npx tsx scripts/generate-public-changelog.ts --ai-polish"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fitglue/web.git"
  },
  "author": "James King",
  "license": "MIT",
  "devDependencies": {
    "@sentry/vite-plugin": "^2.0.0",
    "@types/react": "^19.0.7",
    "@types/react-dom": "^19.0.3",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.3.4",
    "conventional-changelog-cli": "^5.0.0",
    "esbuild": "^0.27.2",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "feed": "^5.1.0",
    "firebase-tools": "^13.24.1",
    "htmlhint": "^1.1.4",
    "openapi-fetch": "^0.15.0",
    "openapi-typescript": "^7.10.1",
    "skier": "^3.0.1",
    "standard-version": "^9.5.0",
    "stylelint": "^16.12.0",
    "stylelint-config-standard": "^36.0.1",
    "typescript": "^5.3.3",
    "vite": "^6.0.7"
  },
  "dependencies": {
    "@sentry/react": "^8.0.0",
    "firebase": "^10.0.0",
    "jotai": "^2.16.1",
    "marked": "^13.0.3",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-easy-crop": "^5.5.6",
    "react-router-dom": "^6.30.2"
  }
}
