{
  "firestore": {
    "rules": "firestore.rules"
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "cleanUrls": true,
    "headers": [
      {
        "source": "**/*.@(jpg|jpeg|gif|png|svg|webp|css|js)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=31536000"
          }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "/hooks/**",
        "run": {
          "serviceId": "api-webhook",
          "region": "us-central1"
        }
      },
      {
        "source": "/api/mobile/**",
        "run": {
          "serviceId": "api-webhook",
          "region": "us-central1"
        }
      },
      {
        "source": "/api/v2/**",
        "run": {
          "serviceId": "api-client",
          "region": "us-central1"
        }
      },
      {
        "source": "/auth/**",
        "run": {
          "serviceId": "api-client",
          "region": "us-central1"
        }
      },
      {
        "source": "/api/public/**",
        "run": {
          "serviceId": "api-public",
          "region": "us-central1"
        }
      },
      {
        "source": "/showcase/**",
        "run": {
          "serviceId": "api-public",
          "region": "us-central1"
        }
      },
      {
        "source": "/api/admin/**",
        "run": {
          "serviceId": "api-admin",
          "region": "us-central1"
        }
      },
      {
        "source": "/app/**",
        "destination": "/app/index.html"
      }
    ]
  }
}