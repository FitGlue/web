{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "cleanUrls": true,
    "headers": [
      {
        "source": "**/*.@(jpg|jpeg|gif|png|svg|webp|css|js)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=31536000"
          }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "/hooks/hevy",
        "function": "hevy-webhook-handler"
      },
      {
        "source": "/hooks/fitbit",
        "function": "fitbit-handler"
      },
      {
        "source": "/api/waitlist",
        "function": "waitlist-handler"
      },
      {
        "source": "/api/inputs/fcm-token",
        "run": {
          "serviceId": "inputs-handler",
          "region": "us-central1"
        }
      },
      {
        "source": "/api/inputs",
        "run": {
          "serviceId": "inputs-handler",
          "region": "us-central1"
        }
      },
      {
        "source": "/api/activities/stats",
        "run": {
          "serviceId": "activities-handler",
          "region": "us-central1"
        }
      },
      {
        "source": "/api/activities",
        "run": {
          "serviceId": "activities-handler",
          "region": "us-central1"
        }
      },
      {
        "source": "/auth/strava/callback",
        "function": "strava-oauth-handler"
      },
      {
        "source": "/auth/fitbit/callback",
        "function": "fitbit-oauth-handler"
      },
      {
        "source": "/app/**",
        "destination": "/app/index.html"
      }
    ]
  }
}
