{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "cleanUrls": true,
    "headers": [
      {
        "source": "**/*.@(jpg|jpeg|gif|png|svg|webp|css|js)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=31536000"
          }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "/hooks/hevy",
        "run": {
          "serviceId": "hevy-webhook-handler",
          "region": "us-central1"
        }
      },
      {
        "source": "/hooks/fitbit",
        "run": {
          "serviceId": "fitbit-handler",
          "region": "us-central1"
        }
      },
      {
        "source": "/hooks/test",
        "run": {
          "serviceId": "mock-source-handler",
          "region": "us-central1"
        }
      },
      {
        "source": "/showcase/**",
        "destination": "/showcase.html"
      },
      {
        "source": "/api/showcase/**",
        "run": {
          "serviceId": "showcase-handler",
          "region": "us-central1"
        }
      },
      {
        "source": "/api/waitlist",
        "run": {
          "serviceId": "waitlist-handler",
          "region": "us-central1"
        }
      },
      {
        "source": "/api/integrations/request",
        "run": {
          "serviceId": "integration-request-handler",
          "region": "us-central1"
        }
      },
      {
        "source": "/api/registry",
        "run": {
          "serviceId": "registry-handler",
          "region": "us-central1"
        }
      },
      {
        "source": "/api/inputs/fcm-token",
        "run": {
          "serviceId": "inputs-handler",
          "region": "us-central1"
        }
      },
      {
        "source": "/api/inputs",
        "run": {
          "serviceId": "inputs-handler",
          "region": "us-central1"
        }
      },
      {
        "source": "/api/inputs/**",
        "run": {
          "serviceId": "inputs-handler",
          "region": "us-central1"
        }
      },
      {
        "source": "/api/users/me/integrations",
        "run": {
          "serviceId": "user-integrations-handler",
          "region": "us-central1"
        }
      },
      {
        "source": "/api/users/me/integrations/**",
        "run": {
          "serviceId": "user-integrations-handler",
          "region": "us-central1"
        }
      },
      {
        "source": "/api/users/me/pipelines",
        "run": {
          "serviceId": "user-pipelines-handler",
          "region": "us-central1"
        }
      },
      {
        "source": "/api/users/me/pipelines/**",
        "run": {
          "serviceId": "user-pipelines-handler",
          "region": "us-central1"
        }
      },
      {
        "source": "/api/users/me/**",
        "run": {
          "serviceId": "user-profile-handler",
          "region": "us-central1"
        }
      },
      {
        "source": "/api/users/me",
        "run": {
          "serviceId": "user-profile-handler",
          "region": "us-central1"
        }
      },
      {
        "source": "/api/billing/**",
        "run": {
          "serviceId": "billing-handler",
          "region": "us-central1"
        }
      },
      {
        "source": "/api/activities/stats",
        "run": {
          "serviceId": "activities-handler",
          "region": "us-central1"
        }
      },
      {
        "source": "/api/activities",
        "run": {
          "serviceId": "activities-handler",
          "region": "us-central1"
        }
      },
      {
        "source": "/api/activities/**",
        "run": {
          "serviceId": "activities-handler",
          "region": "us-central1"
        }
      },
      {
        "source": "/auth/strava/callback",
        "run": {
          "serviceId": "strava-oauth-handler",
          "region": "us-central1"
        }
      },
      {
        "source": "/auth/fitbit/callback",
        "run": {
          "serviceId": "fitbit-oauth-handler",
          "region": "us-central1"
        }
      },
      {
        "source": "/api/mobile/sync",
        "run": {
          "serviceId": "mobile-sync-handler",
          "region": "us-central1"
        }
      },
      {
        "source": "/api/parse-fit",
        "run": {
          "serviceId": "fit-parser-handler",
          "region": "us-central1"
        }
      },
      {
        "source": "/app/**",
        "destination": "/app/index.html"
      }
    ]
  }
}
