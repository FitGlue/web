rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // FitGlue Strategy: Writes are mediated by Cloud Functions.
    // Authenticated users may READ their own data for real-time UI updates.

    // User document: allow authenticated user to read their own profile
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if false;

      // Activities subcollection: allow authenticated user to read their own activities
      match /activities/{activityId} {
        allow read: if request.auth != null && request.auth.uid == userId;
        allow write: if false;
      }

      // Synchronized activities subcollection
      match /synchronized_activities/{activityId} {
        allow read: if request.auth != null && request.auth.uid == userId;
        allow write: if false;
      }

      // Executions subcollection: allow authenticated user to read their own execution traces
      match /executions/{executionId} {
        allow read: if request.auth != null && request.auth.uid == userId;
        allow write: if false;
      }

      // Pending inputs subcollection: allow authenticated user to read their pending inputs
      match /pending_inputs/{inputId} {
        allow read: if request.auth != null && request.auth.uid == userId;
        allow write: if false;
      }

      // Pipelines subcollection: allow authenticated user to read their pipeline configs
      match /pipelines/{pipelineId} {
        allow read: if request.auth != null && request.auth.uid == userId;
        allow write: if false;
      }

      // Counters subcollection: allow authenticated user to read their counters
      match /counters/{counterId} {
        allow read: if request.auth != null && request.auth.uid == userId;
        allow write: if false;
      }
    }

    // All other collections remain locked
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
